rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read/write access to snap-send directory
    match /snap-send/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Allow read/write access to gps-problems directory
    match /gps-problems/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Default rule for other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}